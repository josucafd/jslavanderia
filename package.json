{
  "name": "jslavanderia",
  "version": "1.0.5",
  "main": "electron/main.js",
  "description": "Aplicativo JSLavanderia.",
  "author": "Josu√© Figueredo Delfino <josue.delfino@jslavanderia.com.br>",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && cross-env GH_TOKEN=$GH_TOKEN electron-builder --publish always"
  },
  "build": {
    "appId": "com.jslavanderia.app",
    "productName": "JSLavanderia",
    "files": ["dist/**/*", "electron/**/*", "package.json"],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JSLavanderia",
      "differentialPackage": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "josucafd",
        "repo": "jslavanderia"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-log": "^5.2.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.4",
    "html-to-image": "^1.11.11",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.439.0",
    "pg": "^8.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron": "^32.0.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "vite": "^6.2.0",
    "wait-on": "^8.0.0"
  }
}
